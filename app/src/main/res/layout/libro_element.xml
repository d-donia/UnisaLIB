<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/copertinaIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titoloTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Il giovane Holden"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descrizioneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salinger, 1956, Feltrinelli"/>

            <TextView
                android:id="@+id/isbnTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#146DDA"
                android:text="978881234X"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>